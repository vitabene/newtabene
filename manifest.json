{
  "name": "new tab",
  "description": "a simple and clean newtab extension for Google Chrome",
  "version": "2.0",
  "permissions": [
    "storage",
    "notifications"
  ],
  "chrome_url_overrides" : {
    "newtab": "./pages/newtab.html"
  },
  "options_page": "./pages/options.html",
  "background": {
    "page": "./pages/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "./assets/favicon.png",
    "default_popup": "./pages/popup.html"
  },
  "manifest_version": 2
}
